<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Scroll para pantallas pequeñas -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Botón Volver tipo texto -->
            <TextView
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Volver"
                android:textSize="16sp"
                android:textColor="@color/gray_text"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Imagen Vista Previa -->
            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#EEEEEE"
                android:scaleType="centerCrop"
                android:contentDescription="Vista previa de imagen"
                app:layout_constraintTop_toBottomOf="@id/btnVolver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginTop="24dp"/>

            <!-- Botón Tomar Foto -->
            <Button
                android:id="@+id/btnTake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tomar Foto"
                android:backgroundTint="@color/red_servel"
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ivPreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Botón Seleccionar de Galería -->
            <Button
                android:id="@+id/btnPick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Seleccionar de Galería"
                android:backgroundTint="@color/red_servel"
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnTake"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Botón Enviar -->
            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:backgroundTint="@color/red_servel"
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/btnPick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
